{
  "name": "skill-factory",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "skill-factory",
  "projectType": "library",
  "targets": {
    "validate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm validate",
        "cwd": "skill-factory"
      },
      "cache": true,
      "inputs": [
        "{projectRoot}/skill/**/*.md",
        "{projectRoot}/package.json"
      ]
    }
  },
  "release": {
    "version": {
      "generator": "@nx/js:release-version"
    }
  }
}
